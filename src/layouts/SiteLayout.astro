---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  ogType?: string;
  ldJson?: object;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <ScrollToTop />
  <Header />
  <slot />
  <Footer />
</BaseLayout>
