---
import SiteLayout from './SiteLayout.astro';

interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  publishedDate?: Date;
  type?: string;
  ldJson?: object;
}

const { title, description, canonical, ogImage, publishedDate, type, ldJson } = Astro.props;

const formattedDate = publishedDate
  ? publishedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
  : '';
---

<SiteLayout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  ogType="article"
  ldJson={ldJson}
>
  <main class="flex-1 container mx-auto px-4 py-12">
    <article class="max-w-3xl mx-auto">
      {ogImage && (
        <img
          src={ogImage.replace('https://zamechek.com', '')}
          alt={`Title image for ${title}`}
          class="w-full h-64 sm:h-80 object-cover rounded-lg border border-gray-200 mb-8"
        />
      )}
      <div class="bg-white p-6 sm:p-10 rounded shadow border border-gray-200">
        <header class="mb-8">
          <div class="flex items-center gap-3 mb-3">
            {type && <span class="text-xs font-semibold tracking-wide text-gray-500 uppercase">{type}</span>}
          </div>
          <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-3">{title}</h1>
          {formattedDate && <p class="text-sm text-gray-500">Published: {formattedDate}</p>}
        </header>
        <div class="post-content prose prose-gray max-w-none">
          <slot />
        </div>
        <div class="mt-12 pt-6 border-t border-gray-200">
          <a href="/blog/" class="text-blue-700 hover:underline font-semibold">&larr; Back to Blog</a>
        </div>
      </div>
    </article>
  </main>
</SiteLayout>

<style is:global>
  .post-content h1,
  .post-content h2,
  .post-content h3 {
    font-family: 'Inter', ui-sans-serif, system-ui, sans-serif;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }

  .post-content h1 { font-size: 1.875rem; }
  .post-content h2 { font-size: 1.5rem; }
  .post-content h3 { font-size: 1.25rem; }

  .post-content p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
    color: #374151;
  }

  .post-content li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
    color: #374151;
  }

  .post-content ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .post-content ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .post-content a {
    color: #1d4ed8;
    text-decoration: underline;
  }

  .post-content a:hover {
    color: #1e40af;
  }

  .post-content hr {
    border: none;
    border-top: 1px solid #e5e7eb;
    margin: 2rem 0;
  }

  .post-content blockquote {
    border-left: 4px solid #d1d5db;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
  }

  .post-content code {
    background: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: ui-monospace, SFMono-Regular, monospace;
  }

  .post-content pre {
    background: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .post-content pre code {
    background: none;
    padding: 0;
    color: inherit;
  }
</style>
