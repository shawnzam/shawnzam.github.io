<style>
  :root {
    --tag-hue: 140;
  }

  .tech-tag {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg,
      hsl(var(--tag-hue), 22%, 94%),
      hsl(calc(var(--tag-hue) + 14), 10%, 98%)
    );
    border: 1px solid hsl(var(--tag-hue), 14%, 88%);
    color: hsl(var(--tag-hue), 22%, 32%);
    border-radius: 0.25rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    display: inline-block;
    transition: background 0.3s ease, border-color 0.3s ease, color 0.3s ease;
  }

  .tech-tag::after {
    content: attr(data-emoji);
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) scale(0.85);
    font-size: 1.05rem;
    line-height: 1;
    color: #111827;
    opacity: 0;
    z-index: 1;
    pointer-events: none;
    transition: opacity 0.22s ease, transform 0.22s ease;
  }

  .tech-tag:hover::after {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  .tech-tag:hover {
    color: hsl(var(--tag-hue) 22% 32% / 10%);
  }
</style>

<script>
  // Scroll to Top + tag hue shift on scroll
  const scrollTopBtn = document.getElementById('scrollTopBtn');
  window.addEventListener('scroll', function () {
    const maxScroll = document.body.scrollHeight - window.innerHeight;
    const progress = maxScroll > 0 ? window.scrollY / maxScroll : 0;
    document.documentElement.style.setProperty('--tag-hue', (140 + progress * 20).toFixed(1));
  });

  // History fact for today
  async function showTodayHistoryFact() {
    try {
      const response = await fetch('/history.json');
      const historyOfComputing = await response.json();
      const today = new Date();
      const monthNames = ["January","February","March","April","May","June","July","August","September","October","November","December"];
      const month = monthNames[today.getMonth()];
      const day = today.getDate();
      const todayStr = `${month} ${day}`;
      const fact = historyOfComputing.find((f: {date: string; event: string}) => f.date === todayStr);
      const dateEl = document.getElementById('history-date');
      const factEl = document.getElementById('history-fact');
      if (dateEl) dateEl.textContent = `| ${todayStr}`;
      if (factEl) {
        if (fact) {
          factEl.textContent = fact.event;
        } else {
          factEl.textContent = 'No computing history event found for today.';
        }
      }
    } catch (e) {
      const factEl = document.getElementById('history-fact');
      if (factEl) factEl.textContent = 'Unable to load history fact.';
    }
  }
  showTodayHistoryFact();
</script>
