---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  ogType?: string;
  ldJson?: object;
}

const {
  title,
  description,
  canonical,
  ogImage = 'https://zamechek.com/me.jpg',
  ogType = 'website',
  ldJson,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <script is:inline>if(!['zamechek.com','localhost','127.0.0.1'].includes(location.hostname))location.replace('https://zamechek.com'+location.pathname+location.search);</script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="index,follow,max-image-preview:large" />
  <link rel="canonical" href={canonical} />
  <link rel="icon" type="image/jpeg" href="/me.jpg" />
  <link rel="alternate" type="application/rss+xml" title="Shawn Zamechek Blog RSS" href="https://zamechek.com/blog/rss.xml" />
  <meta property="og:type" content={ogType} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical} />
  <meta property="og:image" content={ogImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-K2VQENWRZJ"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-K2VQENWRZJ');
  </script>
  {ldJson && <script type="application/ld+json" set:html={JSON.stringify(ldJson)} />}
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap" rel="stylesheet" />
</head>
<body class="bg-gradient-to-br from-green-100 via-gray-50 to-green-50 min-h-screen flex flex-col">
  <slot />
</body>
</html>
